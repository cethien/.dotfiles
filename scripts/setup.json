{
	"$schema": "./schemas/setup.schema.json",
	"actions": [
		{
			"script": [
				"Remove-Item alias:curl",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Themes\\Personalize -Name AppsUseLightTheme -Value 0",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Search -Name SearchBoxTaskbarMode -Value 0 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Feeds -Name ShellFeedsTaskbarOpenOnHover -Value 0 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced -Name Hidden -Value 1 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced -Name HideIcons -Value 1 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced -Name OnboardUnpinCortana -Value 1 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced -Name ShowCortanaButton -Value 0 -Type DWord -Force",
				"Set-ItemProperty -Path HKCU:\\Control Panel\\Accessibility\\StickyKeys -Name Flags -Type String -Value \"506\"",
				"Set-ItemProperty -Path HKCU:\\Control Panel\\Accessibility\\ToggleKeys -Name Flags -Type String -Value \"58\"",
				"Set-ItemProperty -Path HKCU:\\Control Panel\\Accessibility\\Keyboard Response -Name Flags -Type String -Value \"122\""
			],
			"winget_packages": [
				{
					"id": "Microsoft.PowerToys"
				},
				{
					"id": "Klocman.BulkCrapUninstaller"
				},
				{
					"id": "AntibodySoftware.WizTree"
				}
			]
		},
		{
			"script": [
				"\"Host *\n\tIdentityFile \"K:/id_ed25519\"\" | Out-File -FilePath $env:USERPROFILE/.ssh/config -Encoding utf8 -Force"
			],
			"winget_packages": [
				{
					"id": "chrisant996.Clink"
				},
				{
					"id": "Microsoft.PowerShell"
				},
				{
					"id": "M2Team.NanaZip"
				},
				{
					"id": "Git.Git",
					"install_flags": [
						"--interactive"
					]
				},
				{
					"id": "Neovim.Neovim"
				},
				{
					"id": "sharkdp.bat"
				},
				{
					"id": "sharkdp.fd"
				},
				{
					"id": "eza-community.eza"
				}
			],
			"pwsh_modules": [
				"posh-git"
			]
		},
		{
			"winget_packages": [
				{
					"id": "VivaldiTechnologies.Vivaldi",
					"exclude_from_updatefile": true
				},
				{
					"id": "Spotify.Spotify",
					"exclude_from_updatefile": true
				}
			]
		},
		{
			"winget_packages": [
				{
					"id": "Microsoft.VisualStudioCode",
					"install_flags": [
						"--interactive"
					]
				},
				{
					"id": "GIMP.GIMP"
				},
				{
					"id": "Ocenaudio.Ocenaudio"
				}
			]
		},
		{
			"profiles": [
				"custom"
			],
			"winget_packages": [
				{
					"id": "JanDeDobbeleer.OhMyPosh"
				},
				{
					"id": "JanDeDobbeleer.Aliae"
				}
			],
			"post_install_script": [
				"oh-my-posh font install CodeNewRoman --user",
				"oh-my-posh font install FiraCode --user"
			]
		},
		{
			"profiles": [
				"home"
			],
			"winget_packages": [
				{
					"id": "Discord.Discord",
					"exclude_from_updatefile": true
				},
				{
					"id": "Google.Drive"
				},
				{
					"id": "Rclone.Rclone"
				},
				{
					"id": "Logitech.GHUB"
				},
				{
					"id": "Nvidia.GeForceExperience"
				},
				{
					"id": "Nvidia.Broadcast"
				},
				{
					"id": "Logitech.GHUB"
				},
				{
					"id": "Elgato.StreamDeck"
				},
				{
					"id": "Elgato.WaveLink"
				},
				{
					"id": "Iriun.IriunWebcam"
				}
			]
		},
		{
			"profiles": [
				"dev"
			],
			"prepare_script": [
				"[Environment]::SetEnvironmentVariable(\"WSLENV\", $env:WSLENV + \":USERprofile/p:POSH_THEMES_PATH/p\", \"USER\")",
				"wsl --install Ubuntu"
			],
			"winget_packages": [
				{
					"id": "Docker.DockerDesktop",
					"install_flags": [
						"--interactive"
					]
				}
			],
			"pwsh_modules": [
				"posh-docker"
			]
		},
		{
			"profiles": [
				"gaming"
			],
			"winget_packages": [
				{
					"id": "Valve.Steam",
					"exclude_from_updatefile": true
				}
			],
			"post_install_script": [
				"Start-Process steam://install/1085660",
				"Start-Process steam://install/1118310",
				"Start-Process steam://install/699130"
			]
		}
	]
}