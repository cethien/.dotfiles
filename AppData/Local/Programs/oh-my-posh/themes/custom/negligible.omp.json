{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"version": 2,
	"console_title_template": "{{if .Root}}⚠️ {{end}}{{.Shell}} :: {{.Folder}}",
	"accent_color": "blue",
	"blocks": [
		{
			"alignment": "left",
			"type": "prompt",
			"segments": [
				{
					"type": "os",
					"style": "powerline",
					"background": "cyan",
					"foreground": "black",
					"template": " {{.Icon}}{{ if .WSL }} in WSL{{ end }} "
				},
				{
					"type": "text",
					"style": "powerline",
					"foreground": "white",
					"template": " :: "
				},
				{
					"type": "time",
					"style": "powerline",
					"background": "lightGreen",
					"foreground": "black",
					"template": " {{ .CurrentDate | date .Format }} "
				},
				{
					"type": "sysinfo",
					"style": "powerline",
					"background": "white",
					"foreground": "black",
					"template": " \udb80\udf5b {{ round .PhysicalPercentUsed .Precision }}% ({{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1000000000.0) }}/{{ (div .PhysicalTotalMemory 1000000000.0) }}GB) "
				},
				{
					"type": "battery",
					"style": "powerline",
					"background": "yellow",
					"foreground": "black",
					"template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }} \uf295 "
				}
			]
		},
		{
			"alignment": "left",
			"newline": true,
			"type": "prompt",
			"segments": [
				{
					"type": "session",
					"style": "powerline",
					"foreground": "lightGreen",
					"template": "{{.UserName}}"
				},
				{
					"type": "path",
					"style": "powerline",
					"properties": {
						"style": "full"
					},
					"foreground": "white",
					"template": " at {{ .Path }} "
				},
				{
					"type": "git",
					"style": "powerline",
					"properties": {
						"fetch_status": true
					},
					"foreground": "#f19d2f",
					"template": ":: \ue702 {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} "
				}
			]
		},

		{
			"alignment": "left",
			"type": "prompt",
			"newline": true,
			"segments": [
				{
					"type": "status",
					"style": "powerline",
					"properties": {
						"always_enabled": true
					},
					"foreground": "lightGreen",
					"foreground_templates": ["{{if .Root}}red{{end}}"],
					"template": "{{if .Root}}\udb82\udc8f {{end}}{{.Shell}} > "
				}
			]
		}
	],
	"transient_prompt": {
		"foreground": "lightGreen",
		"foreground_templates": ["{{if .Root}}red{{end}}"],
		"template": "{{if .Root}}\udb82\udc8f {{end}}{{ .Shell }} > "
	}
}
