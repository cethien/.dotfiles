{
	"$schema": "https://raw.githubusercontent.com/cethien/win-setup/main/schemas/config.schema.json",
	"actions": [
		{
			"script": [
				"Remove-Item alias:curl",
				"Set-ItemProperty -Path \"HKCU:\\Control Panel\\Accessibility\\StickyKeys\" -Name Flags -Type String -Value \"506\"",
				"Set-ItemProperty -Path \"HKCU:\\Control Panel\\Accessibility\\ToggleKeys\" -Name Flags -Type String -Value \"58\"",
				"Set-ItemProperty -Path \"HKCU:\\Control Panel\\Accessibility\\Keyboard Response\" -Name Flags -Type String -Value \"122\""
			],
			"winget_packages": [
				{
					"id": "Microsoft.PowerToys"
				},
				{
					"id": "GeekUninstaller.GeekUninstaller"
				},
				{
					"id": "AntibodySoftware.WizTree"
				}
			]
		},
		{
			"script": [
				"\"Host *\n\tIdentityFile ForwardAgent yes\n\tAddKeysToAgent yes\" | Out-File -FilePath $env:USERPROFILE/.ssh/config -Encoding utf8 -Force"
			],
			"winget_packages": [
				{
					"id": "Microsoft.OpenSSH.Beta"
				},
				{
					"id": "M2Team.NanaZip"
				},
				{
					"id": "Neovim.Neovim"
				}
			],
			"pwsh_modules": [
				"posh-git"
			]
		},
		{
			"winget_packages": [
				{
					"id": "Vivaldi.Vivaldi.Snapshot",
					"exclude_from_updatefile": true
				},
				{
					"id": "KeePassXCTeam.KeePassXC"
				}
			]
		},
		{
			"winget_packages": [
				{
					"id": "Microsoft.VisualStudioCode",
					"install_flags": [
						"--interactive"
					]
				},
				{
					"id": "JGraph.Draw"
				},
				{
					"id": "dotPDN.PaintDotNet"
				},
				{
					"id": "Inkscape.Inkscape"
				},
				{
					"id": "GIMP.GIMP"
				},
				{
					"id": "Ocenaudio.Ocenaudio"
				},
				{
					"id": "WinSCP.WinSCP"
				}
			]
		},
		{
			"profiles": [
				"custom"
			],
			"winget_packages": [
				{
					"id": "chrisant996.Clink"
				},
				{
					"id": "JanDeDobbeleer.OhMyPosh"
				},
				{
					"id": "JanDeDobbeleer.Aliae"
				}
			],
			"post_install_script": [
				"oh-my-posh font install CodeNewRoman",
				"oh-my-posh font install FiraCode"
			]
		},
		{
			"profiles": [
				"home"
			],
			"winget_packages": [
				{
					"id": "AdGuard.AdGuard"
				},
				{
					"id": "eMClient.eMClient"
				},
				{
					"id": "Spotify.Spotify",
					"exclude_from_updatefile": true
				},
				{
					"id": "Bitwarden.Bitwarden"
				},
				{
					"id": "Discord.Discord",
					"exclude_from_updatefile": true
				},
				{
					"id": "Google.Drive"
				}
			]
		},
		{
			"profiles": [
				"home"
			],
			"winget_packages": [
				{
					"id": "Logitech.GHUB"
				},
				{
					"id": "Nvidia.GeForceExperience"
				},
				{
					"id": "Nvidia.Broadcast"
				},
				{
					"id": "Logitech.GHUB"
				},
				{
					"id": "Elgato.StreamDeck"
				},
				{
					"id": "Elgato.WaveLink"
				},
				{
					"id": "Iriun.IriunWebcam"
				},
				{
					"id": "REALiX.HWiNFO"
				}
			]
		},
		{
			"profiles": [
				"dev"
			],
			"winget_packages": [
				{
					"id": "Oven-sh.Bun"
				}
			]
		},
		{
			"profiles": [
				"dev"
			],
			"prepare_script": [
				"[Environment]::SetEnvironmentVariable(\"WSLENV\", $env:WSLENV + \":USERPROFILE/p:POSH_THEMES_PATH/p\", \"USER\")",
				"wsl --update"
			],
			"winget_packages": [
				{
					"id": "Docker.DockerDesktop",
					"install_flags": [
						"--interactive"
					]
				}
			],
			"pwsh_modules": [
				"posh-docker"
			]
		},
		{
			"profiles": [
				"gaming"
			],
			"winget_packages": [
				{
					"id": "Valve.Steam",
					"exclude_from_updatefile": true
				}
			]
		}
	]
}